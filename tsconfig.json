{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "@model/*": ["src/models/*"],
            "@router/*": ["src/routers/*"],
            "@config/*": ["src/config/*"],
            "@interface/*": ["src/interfaces/*"],
            "@strategy/*": ["src/strategies/*"],
            "@utils/*": ["src/utils/*"],
            "@controller/*": ["src/controllers/*"],
            "@pages/*": ["pages/*"]
        }
    },
    "include": ["src/**/*"]
}
